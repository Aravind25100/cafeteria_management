<section style="width:100%;height:100%;background-image:url('/signup.jpg');background-size:100% 100%">
   <div style="width:500px;position:absolute;margin-top:2%;margin-left:10%">
   <h1 class="h1" style="color:white;margin:2% 0">Create account here</h1>
   <%= form_with url:users_path do |form| %>
      <div class="form-group" style="margin-top:20px">
         <%= form.text_field :name, class: "form-control form-input sign-up", placeholder: "Name"  %>
      </div>
      <div class="form-group">
         <%= hidden_field_tag("role",role, class: "form-control" )%>
      </div>
      <div class="form-group">
         <%= form.text_area :address,class:"form-control form-input sign-up" , placeholder: "Address",rows: 3%>
      </div>
      <div class="form-group">
         <%= form.telephone_field :phone_no, class: "form-control form-input sign-up" , placeholder: "Phone number"%>
      </div>
      <div class="form-group">
         <%= form.email_field :email, class: "form-control form-input sign-up" ,placeholder: "Email"  %>
      </div>
      <div class="form-group">
         <%= form.password_field :password, class: "form-control form-input sign-up" ,placeholder: "Password"  %>
      </div>
      <div style="margin-left:300px">
         <%= form.submit "Sign up",style:"width:200px",class:"btn btn-warning" %>
      </div>
   <% end %>
   </div>
</section>
