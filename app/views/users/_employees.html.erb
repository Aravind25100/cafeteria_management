<span class="h3"><%= role.capitalize %>s</span>
<%= link_to "+" ,add_employees_path(role:role),style:"margin-left:40px;font-weight:600;color:black;font-size:20px",method: :get %>
<table class="table table-bordered" style="width:100%">
  <thead class="thead-light">
    <tr>
      <th scope="col">Employee Name</th>
      <th scope="col">Address</th>
      <th scope="col">Phone_no</th>
      <th scope="col">Email</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
      <% User.where(role:role).all.each do |user|%>
         <div>
           <tr>
             <td><%= user.name %></td>
             <td><%= user.address %></td>
             <td><%= user.phone_no %></td>
             <td><%= user.email %></td>
             <td>
  <%# post "/edit_employees", to: "users#update_employee", as: :update_employees %>
                <%= link_to "Edit", edit_employees_path(user_id:user.id) %>
                <%= link_to "Delete","/users/#{user.id}",method: :delete %>
             </td>
            </tr>
          </div>
      <% end %>
  </tbody>
</table>
