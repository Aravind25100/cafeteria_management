<div style="display:flex;align-items:center;">
  <span class="h3" ><%= role.capitalize %>s</span>
  <%= link_to "Add  #{role.capitalize}",add_employees_path(role:role),class:"btn btn-dark",style:"margin-left:50px;padding:3px 12px",method: :get %>
</div>
<table class="table table-borderless" style="width:100%;margin-top:2%;">
  <thead class="thead-light">
    <tr>
      <th scope="col">Employee Name</th>
      <th scope="col" style="width:200px">Address</th>
      <th scope="col">Phone_no</th>
      <th scope="col">Email</th>
      <th scope="col" style="width:150px">Actions</th>
    </tr>
  </thead>
  <tbody>
      <% User.where(role:role).all.each do |user|%>
         <div>
           <tr>
             <td><%= user.name %></td>
             <td><%= user.address %></td>
             <td><%= user.phone_no %></td>
             <td><%= user.email %></td>
             <td style="display:flex;justify-content:space-around">
                <%= link_to "Edit", edit_employees_path(user_id:user.id),style:"padding:0 12px",class:"btn btn-dark" %>
                <%= form_with(url: "/users/#{user.id}",style:"margin-left:10px;", method: "DELETE") do %>
                   <%= image_submit_tag("delete.png",style:"width:20px",:onclick=>"this.form.submit()") %>
                <% end %>
             </td>
            </tr>
          </div>
      <% end %>
  </tbody>
</table>

<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
