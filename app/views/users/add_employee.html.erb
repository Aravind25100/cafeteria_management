<div style="height:100%;background-image:url('https://cdn.shopify.com/s/files/1/0911/8940/articles/photo-1478760329108-5c3ed9d495a0_1750x.jpg?v=1585946939');background-size:fixed">
   <div style="width:500px;height:470px;margin-top:2%;border-radius:4px;box-shadow: 5px 5px 8px 8px grey;background:transparant;position:absolute;margin-left:30%;padding:2%;">
      <h1 class="h1" style="color:white">Create <%= role %></h1>
      <%= form_with url:create_employees_path do |form| %>
         <div class="form-group" style="margin-top:20px">
            <%= form.text_field :name, class: "form-control form-input", placeholder: "Name"  %>
         </div>
         <div class="form-group">
            <%= hidden_field_tag("role",role, class: "form-control" )%>
         </div>
         <div class="form-group">
            <%= form.text_area :address, class:"form-control form-input" , placeholder: "Address",rows: 3%>
         </div>
         <div class="form-group">
            <%= form.telephone_field :phone_no, class: "form-control form-input" , placeholder: "Phone number"%>
         </div>
         <div class="form-group">
            <%= form.email_field :email, class: "form-control form-input" ,placeholder: "Email"  %>
         </div>
         <div class="form-group">
            <%= form.password_field :password, class: "form-control form-input" ,placeholder: "Password"  %>
         </div>
         <div style="margin-left:23 0px">
            <%= form.submit "Create",class:"btn btn-success",style:"width:200px" %>
         </div>
      <% end %>
   </div>
</div>
