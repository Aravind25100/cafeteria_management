<div style="width:500px;margin:0 auto">
<h1>edit Profile</h1>
<%= form_with url:update_employees_path,method: :put do |form| %>
   <div class="form-group" style="margin-top:20px">
      <%= form.text_field :name, class: "form-control", placeholder: "Name"  %>
   </div>
   <div class="form-group">
      <%= hidden_field_tag(:employee_id,employee_id, class: "form-control" )%>
   </div>
   <div class="form-group">
      <%= form.text_area :address, class:"form-control" , placeholder: "Address",rows: 3%>
   </div>
   <div class="form-group">
      <%= form.telephone_field :phone_no, class: "form-control" , placeholder: "Phone number"%>
   </div>
   <div class="form-group">
      <%= form.email_field :email, class: "form-control" ,placeholder: "Email"  %>
   </div>
   <div style="width:20px;margin:0 auto">
      <%= form.submit "update",class:"btn btn-success" %>
   </div>
<% end %>
</div>
